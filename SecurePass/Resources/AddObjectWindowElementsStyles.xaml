<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="AddElementBorderColor" Color="#FF3A3A3A"/>
    
    <Style x:Key="addElementBorder" TargetType="Border">
        <Setter Property="Margin" Value="7"/>
        <Setter Property="Background" Value="{StaticResource AddElementBorderColor}"/>
        <Setter Property="CornerRadius" Value="5"/>
    </Style>

    <Style x:Key="addElementImage" TargetType="Image" >
        <Setter Property="Margin" Value="5,0,0,0"/>
        <Setter Property="DockPanel.Dock" Value="Left"/>
        <Setter Property="Width" Value="25"/>
    </Style>

    <Style x:Key="addElementTextBlock" TargetType="TextBlock">
        <Setter Property="DockPanel.Dock" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="addElementPlusImage" TargetType="Image" >
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Width" Value="15"/>
    </Style>

</ResourceDictionary>